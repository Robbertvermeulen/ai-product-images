APP_NAME="ProductImageAI"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Laravel 12 Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=productimageai
DB_USERNAME=root
DB_PASSWORD=

# Laravel Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting (for future real-time features)
BROADCAST_CONNECTION=log

# Filesystem Configuration
FILESYSTEM_DISK=local
# Future: Change to 's3' for AWS S3 storage

# Queue Configuration
QUEUE_CONNECTION=sync
# Future: Change to 'redis' for async processing

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=productimageai_cache_

# Redis Configuration (for future use)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (for future use)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@productimageai.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (prepared for future S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (for future real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# AI SERVICES (REQUIRED FOR MVP)
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION=
OPENAI_REQUEST_TIMEOUT=120

# AI Model Configuration
AI_COMPLETION_MODEL=gpt-5
AI_VISION_MODEL=gpt-5
AI_IMAGE_MODEL=gpt-image-1

# Firecrawl Configuration
FIRECRAWL_API_KEY=...
FIRECRAWL_API_URL=https://api.firecrawl.dev/v2

# ============================================
# FEATURE FLAGS (MVP Configuration)
# ============================================

# Payment Features (Not active in MVP)
FEATURE_PAYMENT_ENABLED=false
LEMON_SQUEEZY_API_KEY=
LEMON_SQUEEZY_STORE=
LEMON_SQUEEZY_WEBHOOK_SECRET=
LEMON_SQUEEZY_WEBHOOK_URL=

# Registration Control
FEATURE_PUBLIC_REGISTRATION=false
ALLOW_NEW_REGISTRATIONS=false

# Usage Limits (Tracking only in MVP)
FEATURE_USAGE_LIMITS=false
ENFORCE_USAGE_LIMITS=false
FREE_TIER_IMAGE_LIMIT=3
STARTER_TIER_IMAGE_LIMIT=50
PRO_TIER_IMAGE_LIMIT=200

# Email Features (Not active in MVP)
FEATURE_EMAIL_NOTIFICATIONS=false

# API Access (Future feature)
FEATURE_API_ACCESS=false
API_RATE_LIMIT=60

# ============================================
# APPLICATION SETTINGS
# ============================================

# Image Generation Settings
DEFAULT_IMAGE_FORMAT=square
MAX_IMAGES_PER_SESSION=20
IMAGE_GENERATION_TIMEOUT=60

# Share Links
SHARE_LINK_EXPIRY_DAYS=30

# Storage Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Session Settings
STUDIO_SESSION_TIMEOUT_HOURS=24

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Telescope (Laravel Debugging Tool)
TELESCOPE_ENABLED=false

# Debugbar
DEBUGBAR_ENABLED=false

# Testing
TESTING_SEED_DATA=false